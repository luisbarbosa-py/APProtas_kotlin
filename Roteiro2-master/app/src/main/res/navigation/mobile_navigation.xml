<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.roteiro.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.roteiro.ui.login.RegisterFragment"
        android:label="Registrar"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.roteiro.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.roteiro.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_gallery_to_alunosHubFragment"
            app:destination="@id/alunosHubFragment" />
        <action
            android:id="@+id/action_nav_gallery_to_responsaveisHubFragment"
            app:destination="@id/responsaveisHubFragment" />
        <action
            android:id="@+id/action_nav_gallery_to_turmaFragment"
            app:destination="@id/turmaFragment" />
        <action
            android:id="@+id/action_nav_gallery_to_escolaFragment"
            app:destination="@id/escolaFragment" />
        <action
            android:id="@+id/action_nav_gallery_to_condutoresFragment"
            app:destination="@id/condutoresFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.roteiro.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_contato"
        android:name="com.example.roteiro.ui.contato.contatoFragment"
        android:label="@string/contato"
        tools:layout="@layout/fragment_contato" />

    <!-- Alunos -->
    <fragment
        android:id="@+id/alunosHubFragment"
        android:name="com.example.roteiro.ui.alunos.AlunosHubFragment"
        android:label="Alunos"
        tools:layout="@layout/fragment_alunos_hub" >
        <action
            android:id="@+id/action_alunosHubFragment_to_alunosFragment"
            app:destination="@id/alunosFragment" />
        <action
            android:id="@+id/action_alunosHubFragment_to_listaAlunosFragment"
            app:destination="@id/listaAlunosFragment" />
    </fragment>
    <fragment
        android:id="@+id/alunosFragment"
        android:name="com.example.roteiro.ui.alunos.AlunosFragment"
        android:label="Cadastrar Aluno"
        tools:layout="@layout/fragment_alunos" />
    <fragment
        android:id="@+id/listaAlunosFragment"
        android:name="com.example.roteiro.ui.alunos.ListaAlunosFragment"
        android:label="Listar Alunos"
        tools:layout="@layout/fragment_lista_alunos" >
        <action
            android:id="@+id/action_listaAlunosFragment_to_editAlunoFragment"
            app:destination="@id/editAlunoFragment" />
    </fragment>
    <fragment
        android:id="@+id/editAlunoFragment"
        android:name="com.example.roteiro.ui.alunos.EditAlunoFragment"
        android:label="Editar Aluno"
        tools:layout="@layout/fragment_edit_aluno">
        <argument
            android:name="alunoId"
            app:argType="long" />
    </fragment>

    <!-- Responsaveis -->
    <fragment
        android:id="@+id/responsaveisHubFragment"
        android:name="com.example.roteiro.ui.responsaveis.ResponsaveisHubFragment"
        android:label="Respons치veis"
        tools:layout="@layout/fragment_responsaveis_hub" >
        <action
            android:id="@+id/action_responsaveisHubFragment_to_cadastrarResponsavelFragment"
            app:destination="@id/cadastrarResponsavelFragment" />
        <action
            android:id="@+id/action_responsaveisHubFragment_to_listarResponsaveisFragment"
            app:destination="@id/listarResponsaveisFragment" />
    </fragment>
    <fragment
        android:id="@+id/cadastrarResponsavelFragment"
        android:name="com.example.roteiro.ui.responsaveis.CadastrarResponsavelFragment"
        android:label="Cadastrar Respons치vel"
        tools:layout="@layout/fragment_cadastrar_responsavel" />
    <fragment
        android:id="@+id/listarResponsaveisFragment"
        android:name="com.example.roteiro.ui.responsaveis.ListarResponsaveisFragment"
        android:label="Listar Respons치veis"
        tools:layout="@layout/fragment_listar_responsaveis" >
        <action
            android:id="@+id/action_listarResponsaveisFragment_to_editResponsavelFragment"
            app:destination="@id/editResponsavelFragment" />
    </fragment>
    <fragment
        android:id="@+id/editResponsavelFragment"
        android:name="com.example.roteiro.ui.responsaveis.EditResponsavelFragment"
        android:label="Editar Respons치vel"
        tools:layout="@layout/fragment_edit_responsavel">
        <argument
            android:name="responsavelId"
            app:argType="long" />
    </fragment>


    <!-- Outros -->
    <fragment
        android:id="@+id/turmaFragment"
        android:name="com.example.roteiro.TurmaFragment"
        android:label="fragment_turma"
        tools:layout="@layout/fragment_turma" />
    <fragment
        android:id="@+id/escolaFragment"
        android:name="com.example.roteiro.EscolaFragment"
        android:label="fragment_escola"
        tools:layout="@layout/fragment_escola" />
    <fragment
        android:id="@+id/condutoresFragment"
        android:name="com.example.roteiro.CondutoresFragment"
        android:label="fragment_condutores"
        tools:layout="@layout/fragment_condutores" />

</navigation>